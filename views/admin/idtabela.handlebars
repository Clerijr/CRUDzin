<div class="table-responsive col-md-12 mt-4 text-center" id="tablecontainer">
    <table class="table table-bordered table-striped table-sm">
        <thead class="thead-dark">
            <tr>
                <th class="align-middle" scope="col">id</th>
                <th class="align-middle" scope="col">Nome</th>
                <th class="align-middle" scope="col">Estado Civil</th>
                <th class="align-middle" scope="col">Idade</th>
                <th class="align-middle" scope="col">CPF</th>
                <th class="align-middle" scope="col">Cidade</th>
                <th class="align-middle" scope="col">UF</th>
                <th class="align-middle" scope="col">Ações</th>
            </tr>
        </thead>
        <tbody class="usuarios_list">
            <div id="userscontainer">
                <tr>
                <td class="align-middle">{{user._id}}</td>
                <td class="align-middle">{{user.name}}</td>
                <td class="align-middle">{{user.ecivil}}</td>
                <td class="align-middle">{{user.age}}</td>
                <td class="align-middle">{{user.cpf}}</td>
                <td class="align-middle">{{user.city}}</td>
                <td class="align-middle">{{user.uf}}</td>
                <td class="align-middle">
                <a href="/editar/{{user._id}}"><button class="btn btn-info btn-block">Editar</button></a>
                <form action="/cadastro/remover/" method="POST">
                <input type="hidden" name="id" value="{{user._id}}">
                <button type="submit" class="btn btn-danger btn-block">Remover</button>
                </form>
                </td>
                </tr>
            </div>
        </tbody>
    </table>
</div>